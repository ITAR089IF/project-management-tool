<% if @comment.persisted? %>
  $('.comments').prepend('<%= j render(partial: "show_comments", locals: {commentable: @commentable, comments: [@comment] } ) %>');
  $('.new-comment').find('form')[0].reset();
<% else %>
  $('.new-comment').html('<%= j render(partial: "form", locals: { commentable: @commentable, comment: @comment } ) %>');
<% end %>
