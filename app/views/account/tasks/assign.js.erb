$('.notification').remove();
<% if @result %>
  $('#assignee_form').html('<%=j render "account/tasks/assignee_show", task: @task %>')
<% else %>
  <% flash[:alert] = @task.errors.full_messages.to_sentence %>
  $('body').prepend("<%= j render 'shared/flash' %>");
<% end %>
<% if @task.assignee?(current_user) %>
  $("#watch_task_<%= @task.id %> a").
    parent().html('<%= j render('/account/tasks/watch_link', task: @task, project: @project) %>');
<% end %>
