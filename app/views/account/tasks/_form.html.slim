= simple_form_for [:account, @project, @task] do |f|
  = f.input_field :section, as: :hidden, value: @task.section
  = f.input :title, placeholder: 'Title', wrapper: :bulma_input, required: true
  = f.input :description, placeholder: 'Description', wrapper: :textarea
  = f.input :due_date, wrapper: :date, as: :date, html5: true
  = f.input :files, input_html: { multiple: true }, wrapper: :file, label: false
  = f.submit "Save", class: "button is-link"
= link_to 'Back', account_workspace_project_path(@project.workspace_id, @project), class: 'button is-text'
