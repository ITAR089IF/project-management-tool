.email-table
  .div-row
    = link_to image_tag("email.jpg"), root_url
  .div-row
    .title
      = link_to @task.title, account_project_task_url(@task.project, @task)
  .div-row
    .p was assigned to you
  .div-row
    h1 Task Details:
  - if @task.description.present?
    .div-row DESCRIPTION:
    .div-row
      = simple_format @task.description
  .div-row
    .div-cell ASSIGNEE:
    .div-cell
      .p #{@task.assignee.full_name}
  .div-row
    .div-cell PROJECT:
    .div-cell
      .p #{@task.project.name}
  .div-row
    .div-cell FOLLOWERS:
    .div-cell
      - @task.watchers.each do |watcher|
        .p #{watcher.full_name}
